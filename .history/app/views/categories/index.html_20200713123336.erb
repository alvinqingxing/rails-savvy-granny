    <a class="nav-link" id="pills-commerce-tab" data-toggle="pill" href="#pills-commerce" role="tab" aria-controls="pills-commerce" aria-selected="false">e-Commerce</a>
  </li>
</ul>
<%# PILLS LINKS TO WRAPPERS END HERE %>


<%# START OF PILL CONTENT WRAPPER %> <div class="tab-content" id="pills-tabContent">

<%# START CONTENT OF TAB/PILL FOR ALL JOBS %>
  <div class="tab-pane fade show active" id="pills-all" role="tabpanel" aria-labelledby="pills-all-tab">

            <section class="pricing py-4">
            <div class="container">
            <%# <---CARDS -- > %>

                <div class="row">
                <!------------------------- NEW CARD ------------------------------->
                <% @jobs.each do |job| %>
                <div class="col-lg-4 mb-5">
                    <div class="card mb-lg-0">
                    <div class="view overlay">
                    <%= image_tag 'https://raw.githubusercontent.com/alvinqingxing/rails-savvy-granny/master/app/assets/images/bills.jpg', class: 'card-img-top' %>
                        <a href="#!">
                            <div class="mask rgba-white-slight"></div>
                        </a>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title text-uppercase text-center"><%= job.name %></h5>
                        <h6 class="card-price text-center"><%= job.duration.round %> mins</h6>
                        <hr>
                        <ul class="fa-ul">
                        <li><span class="fa-li"><i class="fas fa-check"></i></span>Water / Electric / Gas</li>
                        <li><span class="fa-li"><i class="fas fa-check"></i></span>Internet / Phone bills</li>
                        </ul>
                        <%= link_to "Book a Slot", bookings_new_path(:job => job.id), class: "btn btn-block btn-primary text-uppercase" %>
                    </div>
                    </div>
                </div>
                <% end %>
                <!-------------- Last card ends here ------------->

            </div > 
            </section>
                <!-------------- END OF CARDS ------------->

  </div>

