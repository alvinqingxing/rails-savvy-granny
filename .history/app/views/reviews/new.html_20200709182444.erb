<div class="container">
  <div class="row">
  The Booking

    <div class="col-xs-4">
      <%= simple_form_for @review do |f| %>
        <%= f.input :content %>
        <%= f.input :rating, collection: (1..5).to_a, label: "Rate your experience" %>
        <%= f.submit "Send your review" %>
      <% end %>
    </div>
  </div>
</div>


<div class="container mt-5">
<h1>Book a Tutor</h1>

<div class="d-flex">
<%# The job card goes here %>
<div class="col-12 col-md-6">
<h2>Task</h2>
Category: <%= @booking.category.name %><br>
Task: <strong><%= @booking.name %></strong> - <%= @booking.description %><br>
Time: <%= @booking.duration.round %> mins <br>
Cost: $<%= @booking.job.price %>
Tutor: <%= %>
</div>

<div class="col-12 col-md-6">
<h2>When would you like a tutor?</h2>
<%= simple_form_for @booking do |f| %>
  <div class="form-row">
  <%= f.input :start_date, html5: true, label: false, input_html: { value: Date.today} %>
  <%= f.input :start_time, html5: true, label: false, input_html: { value: "20:00" } %>
  <%= hidden_field_tag(:job_id, @job.id) %>
  <%= hidden_field_tag(:price, @cost) %>
  </div>
  <%= f.button :submit, class: 'btn btn-success btn-block' %>
<% end %>
</div>
</div>

</div>