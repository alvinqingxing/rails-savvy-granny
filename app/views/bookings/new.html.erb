<div class="container mt-5">
  <h1 class="text-center">Book a Tutor</h1>
  <div class="d-flex flex-wrap">
    <%# The job card goes here %>
    <div class="col-12 col-md-8 offset-md-2">
      <div class="card shadow-sm mb-3">
        <div class="d-flex flex-wrap">
          <div class="img-square-wrapper col-3 p-0" style="background-image: url('<%= cl_image_path(@job.photo.key, :crop => :fill)  %>') ; background-size: cover" >
          </div>
          <div class="card-body d-flex flex-column justify-content-between">
            <h5 class="card-title"><%= @job.name %></h5>
            <div class="d-flex justify-content-between">
              <div>
                <p class="card-text">
                  <i class="fas fa-tasks">&nbsp; &nbsp; </i>
                  <% des = JSON.parse @job.description %>
                  <% arr = [] %>
                  <% des.each { |thing| arr << thing[1] }  %> 
                  <%= arr.join(', ') %><br>
                  <i class="far fa-clock">&nbsp; &nbsp; </i> ~<%= @job.duration.round %> mins<br>
                  <i class="fas fa-money-bill-wave-alt">&nbsp; &nbsp; </i> $<%= @cost.round %>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    </div>
    <br>

<div class="container mt-4">
    <div class="col-12 col-md-8 offset-md-2">
    <h1 class="text-center">When's good for your parent?</h1>
      <%= simple_form_for(@booking, as: :booking, method: :post, url: orders_path) do |f| %>
      <div class="form-row justify-content-center">
      <%= f.input :start_date, html5: true, label: false, input_html: { value: Date.today} %>
      <%= f.input :start_time, html5: true, label: false, input_html: { value: "20:00" } %>
      </div>
      <br>
    <h1 class="text-center mt-4" style="font-family: Josefin Sans">Preferred language:</h1>
      <div class="form-row justify-content-center">
        <%= f.input :language, collection: %w[English Chinese Malay Tamil], include_blank: false, label: false %>
        <%= hidden_field_tag(:job_id, @job.id) %>
        <%= hidden_field_tag(:price, @cost) %>
        <%= f.button :submit, class: "btn-primary" %>
    <% end %>
    </div>
  </div>
</div>
</div>
<br>
