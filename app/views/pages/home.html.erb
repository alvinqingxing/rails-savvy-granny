<%# Header %>
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://res.cloudinary.com/dnxszleia/image/upload/v1594365259/photo-of-woman-showing-her-cellphone-to-her-grandmother-3768140_xaa4zu.jpg)";>
  <div class="container d-flex">
    <div class="col-12 col-md-10 col-lg-8 message">
    <h1 style="font-family: 'Josefin Sans'">SavvyGranny</h1>
    <p>Your parents' personal tech support</p>

      <div class="btn-group dropright">
        <button type="button" class="btn btn-sm btn-light dropdown-toggle" data-toggle="dropdown" style="font-size: 20px; font-family: Josefin Sans" aria-haspopup="true" aria-expanded="false">
          Get help for...
        </button>
          <div class="dropdown-menu">
          <% jobnames = @jobs.all.map { |x| x.name } %>
          <% jobids = @jobs.all.map { |x| x.id } %>
            <li>
              <div class="row font-weight-bold" style="width: 60vw">
                <ul class="list-unstyled col-md-4 pl-5">
                  <% (0..4).each { |i| %>
                    <li><a href="bookings/new?job=<%=jobids[i]%>" class="homedroplinks "><%= jobnames[i] %></a></li>
                  <% } %>
                </ul>
                <ul class="list-unstyled col-md-4 pl-1">
                  <% (5..9).each { |i| %>
                    <li><a href="bookings/new?job=<%=jobids[i]%>" class="homedroplinks"><%= jobnames[i] %></a></li>
                  <% } %>
                </ul>
                <ul class="list-unstyled col-md-4 pl-5">
                  <% (10..14).each { |i| %>
                    <li><a href="bookings/new?job=<%=jobids[i]%>" class="homedroplinks"><%= jobnames[i] %></a></li>
                  <% } %>
                </ul>
              </div>
          </li>
        </div>
      </div>
    </div>
  </div>
</div>



