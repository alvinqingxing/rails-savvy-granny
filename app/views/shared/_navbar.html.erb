<div class="navbar navbar-expand-sm navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "https://raw.githubusercontent.com/ouningfei/rails-mister-cocktail/master/logo.JPG" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item" >
          <%= link_to "Home", root_path, class: "nav-link" %>
        </li>

        <li class="nav-item">
          <%= link_to "Notifications", notification_path, class: "nav-link"%>
        </li>

        <% if current_user.tutor? %>
        <li class="nav-item">
          <%= link_to "Job Board", bookings_path, class: "nav-link" %>
        </li>
        <% end %>
        <li class="nav-item">
          <%= link_to "Browse Tasks", categories_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "My Bookings", dashboard_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "My Profile", current_user, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">

        <% avatar_url = current_user.facebook_picture_url || "https://raw.githubusercontent.com/ouningfei/rails-mister-cocktail/master/profile.jpg" %>
        <%= image_tag avatar_url, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
    
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Home", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Browse Tasks", categories_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
